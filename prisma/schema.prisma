generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model CounselingTranscript {
  id          String   @id @default(cuid())
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Transcript content
  patientText String   @db.Text
  counselorText String @db.Text
  
  // Metadata
  patientAge   Int?
  patientGender String?
  sessionType  String?  // e.g., "individual", "group", "family"
  mainIssue    String?  // e.g., "anxiety", "depression", "relationship"
  
  // Analysis results
  sentimentScore Float?
  responseType   String?  // e.g., "direct_advice", "reflective", "questioning"
  
  // Search optimization
  searchVector  Unsupported("tsvector")?
  
  @@index([mainIssue])
  @@index([sessionType])
}
